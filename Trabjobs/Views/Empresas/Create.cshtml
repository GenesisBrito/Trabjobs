@model Trabjobs.Models.Empresa

@{
    ViewData["Title"] = "Create";
}

<div class="registration-box">
    <h1>¡Únete como empresa!</h1>
    <form method="post" class="form-floating">
        <div class="form-group">
            <label asp-for="NombreEmpresa" class="control-label">Nombre de la empresa</label>
            <input asp-for="NombreEmpresa" class="form-control" placeholder="Ingresa el nombre de tu empresa" />
            <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CorreoEmpresa" class="control-label">Correo electrónico</label>
            <input asp-for="CorreoEmpresa" class="form-control" placeholder="Ingresa el correo electrónico de tu empresa" />
