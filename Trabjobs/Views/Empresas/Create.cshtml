            <span asp-validation-for="ContraseñaEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TelefonoEmpresa" class="control-label">Teléfono</label>
            <input asp-for="TelefonoEmpresa" class="form-control" placeholder="Ingresa el teléfono de contacto" />
            <span asp-validation-for="TelefonoEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocacionEmpresa" class="control-label">Ubicación</label>
            <input asp-for="LocacionEmpresa" class="form-control" placeholder="Ingresa la ubicación de la empresa" />
            <span asp-validation-for="LocacionEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RolEmpresaId" class="control-label">Sector de la empresa</label>
            <select asp-for="RolEmpresaId" class="form-control" asp-items="ViewBag.RolEmpresaId">
            </select>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Crear cuenta</button>
        </div>
        <br />
        <div class="text-center">
            <a href="\LoginEmpresas\Create" class="btn btn-primary">INGRESAR</a>
        </div>

    </form>
</div>
